          {
            "in": "query",
            "name": "category",
            "required": false,
            "type": "string",
            "description": "Search products by categories"
          },
          {
            "in": "query",
            "name": "recommended",
            "required": false,
            "type": "string",
            "description": "Search recommended products by blood type"
